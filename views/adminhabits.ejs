        <!-- BOOTSTRAP ERROR, NOT WORKING -->

        <% if (typeof alert !== 'undefined' && alert.length > 0) { %>
            <% alert.forEach(function(error) { %>
                <div class="alert alert-warning alert-dismissible fade show" role="alert">
                    <%= error.msg %>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            <% }) %>
        <% } %>
        
        <% if (typeof savedMessage !== 'undefined' && savedMessage.length > 0) { %>
            <% savedMessage.forEach(function(message) { %>
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <%= message.msg %>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            <% }) %>
        <% } %>

        


    
    <div id="formDiv">    
        <h2>Update personal information:</h2>
        <p>Enter the following details.</p>
        <form id="updateForm" method="POST" action="/profile/update">
            <label for="name" class="form-label">Name:</label>
            <div class="input-group">
                <input type="text" id="name" name="name" min="3" max="50" class="form-control">
            </div>

            <label for="email" class="form-label">Contact Email:</label>
            <div class="input-group">
                <input type="text" id="email" name="email" class="form-control" pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,4}$">
            </div>

            <label for="bio" class="form-label">Bio:</label>
            <div class="input-group">
                <textarea type="text" id="bio" name="bio" max="500" class="form-control"></textarea>
            </div>

            <!-- <p>CHANGES WILL ONLY BE SUBMITED ONCE CRITERIA IS</p> -->
        
            <input type="submit" value="Update" class="btn btn-dark mt-3">
        </form>
    </div>

